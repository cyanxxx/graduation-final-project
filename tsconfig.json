{
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "lib": ["dom", "es6", "es2015", "es5", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDirs": ["src", "stories", "static"],
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    // "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "DATA": ["./src/config/api"]
    }
  },
  "include": ["src/**/*", "types"],
  "exclude": ["dist", "node_modules"]
}
